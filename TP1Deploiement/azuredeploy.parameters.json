{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    // Spécifie l'emplacement géographique pour le déploiement
    "location": {
      "value": "canadacentral"
    },
    // Type de disque OS utilisé pour les machines virtuelles (SSD standard)
    "osDiskType": {
      "value": "StandardSSD_LRS"
    },
    // ID de réseau virtuel pour connecter les ressources
    "virtualNetworkId": {
      "value": "/subscriptions/006ae760-9178-4c58-b965-89b732234df0/resourceGroups/TP1/providers/Microsoft.Network/virtualNetworks/vnet-canadacentral"
    },
    // Nom du réseau virtuel
    "virtualNetworkName": {
      "value": "vnet-canadacentral"
    },
    // Configuration des groupes de sécurité réseau (NSG) pour contrôler le trafic réseau
    "networkSecurityGroups": {
      "value": [
        {
          "name": "basicNsgvnet-canadacentral-nic01",
          "id": "/subscriptions/006ae760-9178-4c58-b965-89b732234df0/resourceGroups/TP1/providers/Microsoft.Network/networkSecurityGroups/basicNsgvnet-canadacentral-nic01",
          "rules": [
            {
              "name": "Tcp",
              "properties": {
                "priority": 300,
                "protocol": "Tcp",
                "access": "Allow",
                "direction": "Inbound",
                "sourceAddressPrefix": "*",
                "sourcePortRange": "*",
                "destinationAddressPrefix": "*",
                "destinationPortRange": "80"
              }
            }
          ]
        }
      ]
    },
    // Configurations des interfaces réseau pour les machines virtuelles
    "networkInterfaceConfigurations": {
      "value": [
        {
          "name": "vnet-canadacentral-nic01",
          "primary": true,
          "subnetId": "/subscriptions/006ae760-9178-4c58-b965-89b732234df0/resourceGroups/TP1/providers/Microsoft.Network/virtualNetworks/vnet-canadacentral/subnets/snet-canadacentral-1",
          "applicationGatewayBackendAddressPools": [],
          "loadBalancerBackendAddressPools": [
            {
              "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', parameters('loadBalancerName'), parameters('backendPoolName'))]"
            }
          ],
          "applicationSecurityGroups": [],
          "loadBalancerInboundNatPools": [],
          "enableAcceleratedNetworking": false,
          "nsgName": "basicNsgvnet-canadacentral-nic01",
          "nsgId": "/subscriptions/006ae760-9178-4c58-b965-89b732234df0/resourceGroups/TP1/providers/Microsoft.Network/networkSecurityGroups/basicNsgvnet-canadacentral-nic01",
          "pipName": "publicIp-vnet-canadacentral-nic01"
        }
      ]
    },
    // Nom du pool backend pour le load balancer
    "backendPoolName": {
      "value": "bepool"
    },
    // Nom du load balancer
    "loadBalancerName": {
      "value": "LoadBalencer"
    },
    // Port frontal de la règle de load balancing
    "loadbalancingRuleFrontEndPort": {
      "value": 80
    },
    // Port backend de la règle de load balancing
    "loadbalancingRuleBackendEndPort": {
      "value": 80
    },
    // Protocole utilisé pour la règle de load balancing
    "loadbalancingRuleProtocol": {
      "value": "Tcp"
    },
    // Plage de ports pour les règles NAT entrantes
    "InboundNATRuleFrontEndPortRangeStart": {
      "value": 50000
    },
    // Nom de la machine virtuelle
    "vmName": {
      "value": "VMSaclet"
    },
    // Nom du groupe d'échelle de machines virtuelles
    "virtualMachineScaleSetName": {
      "value": "VMSaclet"
    },
    // Nombre d'instances dans le groupe d'échelle de machines virtuelles
    "instanceCount": {
      "value": "2"
    },
    // Taille des instances dans le groupe d'échelle
    "instanceSize": {
      "value": "Standard_DS1_v2"
    },
    // Zones de disponibilité pour équilibrer la charge entre plusieurs zones
    "zone": {
      "value": [
        "1",
        "3"
      ]
    },
    // Indique si le groupe d'échelle doit équilibrer les zones
    "zoneBalance": {
      "value": "false"
    },
    // Nombre de domaines de faute pour le groupe d'échelle
    "platformFaultDomainCount": {
      "value": "1"
    },
    // Politique de réduction d'échelle du groupe d'échelle de machines virtuelles
    "scaleInPolicy": {
      "value": {
        "rules": [
          "Default"
        ],
        "forceDeletion": false
      }
    },
    // Mode de mise à jour pour le groupe d'échelle de machines virtuelles
    "upgradePolicy": {
      "value": "Manual"
    },
    // Activation de l'hibernation
    "hibernationEnabled": {
      "value": false
    },
    // Nom d'utilisateur administrateur pour les machines virtuelles
    "adminUsername": {
      "value": "vmadmin"
    },
    // Mot de passe administrateur pour les machines virtuelles (laissé vide pour des raisons de sécurité)
    "adminPassword": {
      "value": null
    },
    // Données personnalisées pour le provisionnement
    "customData": {
      "value": null
    },
    // Type de sécurité pour les machines virtuelles (Trusted Launch pour la sécurité avancée)
    "securityType": {
      "value": "TrustedLaunch"
    },
    // Activation du démarrage sécurisé
    "secureBoot": {
      "value": true
    },
    // Activation du TPM virtuel
    "vTPM": {
      "value": true
    },
    // Emplacement du réseau virtuel
    "vnetLocation": {
      "value": "canadacentral"
    },
    // Emplacement étendu du réseau virtuel (vide pour ce cas)
    "vnetExtendedLocation": {
      "value": {}
    },
    // Nom du réseau virtuel associé
    "vnetVirtualNetworkName": {
      "value": "vnet-canadacentral"
    },
    // Nom du groupe de ressources pour le réseau virtuel
    "vnetResourceGroupName": {
      "value": "TP1"
    },
    // Nom du déploiement pour le réseau virtuel
    "vnetDeploymentName": {
      "value": "network-interface-associated-virtual-network-20241109164215"
    },
    // Liste des passerelles NAT avec nouvelle adresse IP publique pour le réseau virtuel
    "vnetNatGatewaysWithNewPublicIpAddress": {
      "value": []
    },
    // Liste des passerelles NAT sans nouvelle adresse IP publique pour le réseau virtuel
    "vnetNatGatewaysWithoutNewPublicIpAddress": {
      "value": []
    },
    // Liste des noms des nouvelles adresses IP publiques pour NAT
    "vnetNatGatewayPublicIpAddressesNewNames": {
      "value": []
    },
    // Liste des nouveaux groupes de sécurité réseau pour le réseau virtuel
    "vnetNetworkSecurityGroupsNew": {
      "value": []
    },
    // Propriétés du réseau virtuel, incluant les sous-réseaux et espace d'adressage
    "vnetProperties": {
      "value": {
        "subnets": [
          {
            "name": "snet-canadacentral-1",
            "properties": {
              "addressPrefixes": [
                "172.16.0.0/24"
              ]
            }
          }
        ],
        "addressSpace": {
          "addressPrefixes": [
            "172.16.0.0/16"
          ]
        }
      }
    }
  }
}
